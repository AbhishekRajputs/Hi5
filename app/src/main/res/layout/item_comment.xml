<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_10dp"
    android:paddingHorizontal="@dimen/dimen_4dp">

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:src="@drawable/ic_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Abhishek Rajput"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvDate"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        app:layout_constraintTop_toTopOf="@+id/imgUser" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="10 Octâ€™21"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imgUser"
        app:layout_constraintTop_toBottomOf="@+id/tvUser"
        app:layout_constraintStart_toStartOf="@+id/tvUser" />


    <TextView
        android:id="@+id/tvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:fontFamily="@font/montserrat_regular"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
        android:layout_marginTop="@dimen/dimen_12sp"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUser"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="256"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingStart="@dimen/dimen_0dp"
        android:drawablePadding="4dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@+id/tvComments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvComment"
        app:drawableStartCompat="@drawable/fav_selector" />

    <TextView
        android:id="@+id/tvComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingStart="@dimen/dimen_0dp"
        android:drawablePadding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvfav"
        app:layout_constraintEnd_toStartOf="@+id/tvBrand"
        app:layout_constraintStart_toEndOf="@+id/tvfav"
        app:layout_constraintTop_toTopOf="@+id/tvfav"
        app:drawableStartCompat="@drawable/ic_chat" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/tvfav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvComments"
        app:layout_constraintTop_toTopOf="@+id/tvfav" />


</androidx.constraintlayout.widget.ConstraintLayout>