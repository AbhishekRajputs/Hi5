<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.fragments.rewards.fragments.EarnFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutScan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_earn_points"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgIconScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Scan QR Code"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imgIconScan"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScanPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="+ 50"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imgIconScan"
            app:layout_constraintTop_toBottomOf="@+id/tvScan" />


        <TextView
            android:id="@+id/tvScanPoints2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_earn_points"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutScan">

        <ImageView
            android:id="@+id/imgIconComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_comments"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Comments"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imgIconComments"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScanComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="+ 50"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toEndOf="@+id/imgIconComments"
            app:layout_constraintTop_toBottomOf="@+id/tvComments" />


        <TextView
            android:id="@+id/tvScanComments2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutShareAd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_earn_points"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutComments">

        <ImageView
            android:id="@+id/imgIconShareAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_share_ad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShareAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Share Ad's"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imgIconShareAd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScanShareAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="+ 50"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toEndOf="@+id/imgIconShareAd"
            app:layout_constraintTop_toBottomOf="@+id/tvShareAd" />


        <TextView
            android:id="@+id/tvScanShareAd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDiscoverDeals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_earn_points"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutShareAd">

        <ImageView
            android:id="@+id/imgIconDiscoverDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_discover_deals"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDiscoverDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Discover Deals"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imgIconDiscoverDeals"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScanDiscoverDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="+ 50"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toEndOf="@+id/imgIconDiscoverDeals"
            app:layout_constraintTop_toBottomOf="@+id/tvDiscoverDeals" />


        <TextView
            android:id="@+id/tvScanDiscoverDeals2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutReferFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_earn_points"
        android:backgroundTint="#8233FF"
        android:paddingHorizontal="10dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDiscoverDeals">

        <ImageView
            android:id="@+id/imgReferFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_invite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRefer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Refer a Friend"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@+id/imgReferFriends"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReferDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Recommend your friends to earn points and let them enjoy amazing deals."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgReferFriends"
            app:layout_constraintTop_toBottomOf="@+id/tvRefer" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/inviteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_light_grey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/layoutReferFriend"
        app:layout_constraintStart_toStartOf="@+id/layoutReferFriend"
        app:layout_constraintTop_toBottomOf="@+id/layoutReferFriend">

        <TextView
            android:id="@+id/tvInviteCode"
            android:text="PAUL007HI5"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvRedeem"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_tab_selector"
            android:text="invite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>