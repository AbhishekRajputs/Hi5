<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_back"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:elevation="@dimen/dimen_12dp"
        app:cardCornerRadius="@dimen/dimen_12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_8dp"
            android:src="@drawable/ic_back" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Discover New Deal"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/dimen_24sp"
        app:layout_constraintBottom_toBottomOf="@id/card_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toEndOf="@id/card_back"
        app:layout_constraintTop_toTopOf="@id/card_back" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_old_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/edt_bg_grey"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Add Offer Title"
        android:padding="@dimen/dimen_16dp"
        android:textColorHint="#A1A4B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/card_back"
        app:layout_constraintTop_toBottomOf="@id/card_back" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_new_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/edt_bg_grey"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Company or Brand Name"
        android:padding="@dimen/dimen_16dp"
        android:textColorHint="#A1A4B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/card_back"
        app:layout_constraintTop_toBottomOf="@id/et_old_password" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/edt_bg_grey"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Offer Description"
        android:padding="@dimen/dimen_16dp"
        android:textColorHint="#A1A4B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/card_back"
        app:layout_constraintTop_toBottomOf="@id/et_new_password" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/edt_dot_bg"
        android:drawableStart="@drawable/ic_add_ring"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_12dp"
        android:text="Add Photos"
        android:textColor="#A1A4B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password" />

